            bold: True
            outline_color: (0,1,0)
            outline_width: 5
            color: (0,0,0)
            font_size: 28
        MDBoxLayout:
            orientation: "horizontal"
            adaptive_height: True
            padding: "10dp"
            spacing: "10dp"
           # md_bg_color: 0, 0, 1, 1
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                padding: "10dp"
                spacing: "10dp"
               # md_bg_color: 0, 1, 0, 1

                MDTextField:
                    id: addr1
                    hint_text: "Enter first byte of address"
                MDTextField:
                    id: addr2
                    hint_text: "Enter second byte of address"
                MDTextField:
                    id: data
                    hint_text: "Enter one byte of data"
                MDTextField:
                    id: loops
                    hint_text: "Enter how many reads to perform per 32 bytes"
                    helper_text: " Interger Max value 128"
                    max_text_length: 3

            MDBoxLayout:
                orientation: "vertical"
                padding: "10dp"
                spacing: "10dp"
               # md_bg_color: 1, 0, 0, 1

                MDLabel:
                    id: result
                    text: ""
                    halign: "center"
                    color: 1, 0.34, 0.133, 1.0
                    font_size: 45


        MDBoxLayout:
            orientation: "horizontal"
            padding: "20dp"
            spacing: "20dp"

            MDBoxLayout:
                orientation: "vertical"
                padding: "20dp"
                spacing: "20dp"

                MDRectangleFlatButton:
                    text: "Write Bytes"
                    on_press: root.writing()
                    on_release: root.serial_writebytes()
            MDBoxLayout:
                padding: "20dp"
                spacing: "20dp"

                MDRectangleFlatButton:
                    text: "Clear Fields"
                    on_press: root.clear_text()
                MDRectangleFlatButton:
                    id: back_submit
                    text: "Back"
                    on_press: app.root.current = "mainwindow"


